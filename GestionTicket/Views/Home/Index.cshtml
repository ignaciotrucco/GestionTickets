        <button type="button" onclick="vaciarCampos()" class="btn-close" data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <form class="formulario d-flex flex-column align-items-center">
          <input type="text" name="TituloTarea" id="TituloTarea">
          <input type="text" name="NombreTiposistema" id="NombreTiposistema">
          <input type="text" name="UsuarioID" id="UsuarioID">
          <input type="text" name="Descripcionsubtarea " id="Descripcion">
          <input type="text" name="EstadoSubtarea" id="EstadoSubtarea">


        </form>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" onclick="vaciarCampos()"
          data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-success" onclick="crearTarea()">Crear</button>
      </div>
    </div>
  </div>
</div>




